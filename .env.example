# Environment Variables for Semantic Search RAG Application
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_organization_id_here  # Optional

# Hugging Face Configuration (Optional)
HUGGINGFACE_API_KEY=your_huggingface_token_here

# Pinecone Configuration (Optional - for cloud vector DB)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Application Configuration
APP_HOST=localhost
APP_PORT=8501
DEBUG=True

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb  # Options: chromadb, pinecone, faiss
VECTOR_DB_PATH=./database/chroma_db
COLLECTION_NAME=semantic_search

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Search Configuration
MAX_SEARCH_RESULTS=10
SIMILARITY_THRESHOLD=0.7